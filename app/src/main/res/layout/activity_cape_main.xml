<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_cape_main"
    android:orientation="vertical"
    tools:context="com.example.ucsdschedulinghelper.ui.cape.CapeMainActivity">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TableLayout
                    android:id="@+id/cape_header_fixed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:showDividers="middle">
                </TableLayout>
                <com.example.ucsdschedulinghelper.ui.cape.ObservableHorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cape_header_scroll"
                    android:scrollbars="none">
                    <TableLayout
                        android:id="@+id/cape_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:showDividers="middle">
                    </TableLayout>
                </com.example.ucsdschedulinghelper.ui.cape.ObservableHorizontalScrollView>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TableLayout
                                android:id="@+id/cape_table_fixed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:showDividers="middle">
                        </TableLayout>
                        <com.example.ucsdschedulinghelper.ui.cape.ObservableHorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cape_table_scroll">
                            <TableLayout
                                android:id="@+id/cape_table"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:showDividers="middle"
                                >
                            </TableLayout>
                        </com.example.ucsdschedulinghelper.ui.cape.ObservableHorizontalScrollView>
                    </LinearLayout>
            </ScrollView>
        </TableRow>
    </TableLayout>
</LinearLayout>
